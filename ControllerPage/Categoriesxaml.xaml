<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppApiConsumer.ControllerPage.Categoriesxaml"
             Title="Categorías">
    <VerticalStackLayout>
        <Label Text="Categorías" FontSize="20" HorizontalOptions="Center" Margin="10, 10"/>

        <StackLayout>
            <Label Text="ID"/>
            <Entry x:Name="txtId" Keyboard="Numeric"/>
            <Label x:Name="lblIdError" TextColor="Red" IsVisible="False" Text="ID is required"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Name"/>
            <Entry x:Name="txtName" />
            <Label x:Name="lblNameError" TextColor="Red" IsVisible="False" Text="Name is required"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Save"  Margin="10" Clicked="Post_Clicked"/>
            <Button Text="Get" Margin="10" Clicked="Get_Clicked"/>
            <Button Text="Update" Margin="10" Clicked="Put_Clicked"/>
            <Button Text="Delete" Margin="10" Clicked="Delete_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>